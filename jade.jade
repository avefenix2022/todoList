doctype html
html
    head
        title to-do List
        
        meta(name="viewport", content="user-scalable=no,initial-scale=1.0,maximum-scale=1.0")
        meta(name="apple-mobile-web-app-capable", content="yes")
        
        link(rel="stylesheet", href="css/jquery.mobile-1.4.5.css")
        link(rel="stylesheet", href="css/todo.css")
        
        script(src="js/jquery-2.1.3.js") 
        script(src="js/jquery.mobile-1.4.5.js")
        script(src="js/todo.js")
    body
        #main(data-role="page")
            div(data-role="header", data-position="fixed")
                h1 To Do List
                a#add(href="#", data-icon="plus", class="ui-btn-right") Add
                a#cancel(href="#", data-icon="delete", class="ui-btn-right") Cancel
            div(data-role="content")
                #newitem
                    input#text(type="text", placeholder="Enter To Do item")
                    a#save(href="#", data-role="button", data-inline="true", data-icon='plus') Save
                ul#todolist(data-role="listview")
        #tm
            li#item_tm
                span(class="check") &nbsp;
                span(class="text")
            
            #delete_tm(class="delete") Delete

    
